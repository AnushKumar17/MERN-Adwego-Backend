{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/routes/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/auth(.*)", "dest": "/api/auth$1" },
    { "src": "/api/users(.*)", "dest": "/api/users$1" },
    { "src": "/api/adds(.*)", "dest": "/api/adds$1" },
    { "src": "/api/comments(.*)", "dest": "/api/comments$1" },
    { "src": "/(.*)", "dest": "/index.js" }
  ]
}
